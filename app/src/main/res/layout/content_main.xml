<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="icm.ua.pt.icm_app.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_exhibition"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
>
    <ImageView
        android:id="@+id/current_exhibition_image"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:src="@drawable/current_expo"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/current_exhibition_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/current_exhibition_image"
        android:text="@string/current_exhibition_name"
        />



</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Exhibitions"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



     <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="350dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/current_expo"
                    android:id="@+id/pastExib1"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/pastExib1Btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/pastExib1"
                    android:text="TEST"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <!-- Number 2-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="350dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/current_expo"
                    android:id="@+id/pastExib2"
                    android:visibility="gone"
                    android:scaleType="fitXY"

                    />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/pastExib2Btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/pastExib2"
                    android:text="TEST"
                    android:visibility="gone"
                    />
            </RelativeLayout>


            <!-- Number 3-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="350dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/current_expo"
                    android:id="@+id/pastExib3"
                    android:visibility="gone"
                    android:scaleType="fitXY"

                    />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/pastExib3Btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/pastExib3"
                    android:text="TEST"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <!-- Number 4-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="350dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/current_expo"
                    android:id="@+id/pastExib4"
                    android:visibility="gone"
                    android:scaleType="fitXY"

                    />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/pastExib4Btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/pastExib4"
                    android:text="TEST"
                    android:visibility="gone"
                    />
            </RelativeLayout>



        </LinearLayout>

    </HorizontalScrollView>

    </LinearLayout>


</LinearLayout>
